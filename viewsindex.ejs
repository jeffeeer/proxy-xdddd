<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Proxy Privado</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h1>Bienvenido, <%= user %> | <a href="/logout">Cerrar sesi√≥n</a></h1>

  <form action="/proxy" method="get" target="proxyFrame">
    <input
      type="text"
      name="url"
      placeholder="Ingresa la URL para navegar"
      required
      style="width: 60%"
    />
    <button type="submit">Ir</button>
  </form>

  <h2>Marcadores</h2>
  <form action="/bookmarks" method="post">
    <input type="url" name="url" placeholder="Agregar marcador URL" required />
    <button type="submit">Agregar</button>
  </form>

  <ul>
    <% bookmarks.forEach(function(b) { %>
      <li>
        <a href="<%= b.url %>" target="proxyFrame"><%= b.url %></a>
        <form action="/bookmarks/delete/<%= b.id %>" method="post" style="display:inline">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <iframe
    name="proxyFrame"
    src=""
    style="width: 100%; height: 600px; border: 1px solid #ccc; margin-top: 20px;"
  ></iframe>
</body>
</html>
